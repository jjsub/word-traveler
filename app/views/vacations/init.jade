
extends ../shared/template
block content
  .row
    .col-xs-4
      form(role'form', method='post', action='/vacations')
        input#lat(type='hidden',name='lat')
        input#lng(type='hidden',name='lng')
        .form-group
          label(for='name') Vacation Name
          input.form-control#name(type='text', name='name', placeholder='Vacation Name',autofocus=true)
        .form-group
          label(for='start') Start Date
          input.form-control#name(type='date', name='start', placeholder='Start Date')
        .form-group
          label(for='end') End Date
          input.form-control#name(type='date', name='end', placeholder='End Date',)
        button.btn.btn-primary(type='submit') Save Vacation
      .col-xs-8

block scripts
  script(src='/js/user/new-vacation.js')

